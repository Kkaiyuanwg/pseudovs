	},
	"do": {
		"prefix": "do",
		"body": [
			"do",
			"\t$0",
			"while(${1:conditon})"
		],
		"description": "Insertion d'un bloc Faire .. Tant que\"pour\""
	},
	"si": {
		"prefix": "si",
